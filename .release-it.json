{
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "conventionalcommits",
                "types": [
                    {
                        "type": "feat",
                        "section": "‚ú® Features"
                    },
                    {
                        "type": "fix",
                        "section": "üêõ Bug Fixes"
                    },
                    {
                        "type": "chore",
                        "section": "üé´ Chores"
                    },
                    {
                        "type": "docs",
                        "section": "üìù Documentation"
                    },
                    {
                        "type": "style",
                        "section": "üíÑ Styles"
                    },
                    {
                        "type": "refactor",
                        "section": "‚ôª Code Refactoring"
                    },
                    {
                        "type": "perf",
                        "section": "‚ö° Performance Improvements"
                    },
                    {
                        "type": "test",
                        "section": "‚úÖ Tests"
                    },
                    {
                        "type": "revert",
                        "section": "‚è™ Reverts"
                    },
                    {
                        "type": "build",
                        "section": "üë∑‚Äç Build System"
                    },
                    {
                        "type": "ci",
                        "section": "üîß Continuous Integration"
                    },
                    {
                        "type": "config",
                        "section": "üî® CONFIG"
                    }
                ]
            },
            "infile": "CHANGELOG.md",
            "ignoreRecommendedBump": true,
            "strictSemVer": true
        }
    },
    "git": {
        "commitMessage": "chore: release v${version}",
        "tagName": "v${version}",
        "requireCleanWorkingDir": true
    },
    "github": {
        "release": true,
        "draft": false,
        "releaseName": "v${version}"
    },
    "npm": {
        "publish": false,
        "versionArgs": [
            "--allow-same-version",
            "--workspaces-update=false"
        ]
    }
}